{
  "_comment": "Mochi-Link Connector Configuration for Fabric / 大福连连接器Fabric配置文件",
  
  "connection": {
    "_comment": "Connection Configuration / 连接配置",
    "host": "localhost",
    "port": 8080,
    "ssl": false,
    "timeout": 30000,
    "path": "/ws"
  },
  
  "server": {
    "_comment": "Server Configuration / 服务器配置",
    "id": "my-fabric-server",
    "name": "我的Fabric服务器",
    "type": "Fabric",
    "description": "A Fabric server managed by Mochi-Link",
    "tags": ["fabric", "modded", "java"]
  },
  
  "auth": {
    "_comment": "Authentication Configuration / 认证配置",
    "token": "your-api-token-here",
    "refreshInterval": 3600
  },
  
  "reconnect": {
    "_comment": "Auto-reconnection Configuration / 自动重连配置",
    "enabled": true,
    "interval": 30,
    "maxAttempts": 10,
    "exponentialBackoff": true,
    "maxBackoffTime": 300
  },
  
  "features": {
    "_comment": "Feature Configuration / 功能配置",
    "playerEvents": {
      "enabled": true,
      "events": ["join", "quit", "chat", "death", "advancement"]
    },
    "serverMonitoring": {
      "enabled": true,
      "interval": 30
    },
    "commandExecution": {
      "enabled": true,
      "whitelist": ["list", "tps", "memory", "save-all"],
      "blacklist": ["stop", "restart"]
    },
    "performanceMonitoring": {
      "enabled": true,
      "interval": 60,
      "metrics": ["tps", "memory", "cpu", "players", "mods"]
    }
  },
  
  "fabric": {
    "_comment": "Fabric-specific Configuration / Fabric特定配置",
    "useAsyncScheduler": true,
    "enableMixins": false,
    "modIntegration": {
      "enabled": true,
      "scanMods": true,
      "reportModList": true
    },
    "permissions": {
      "useFabricPermissions": true,
      "fallbackToOp": true
    }
  },
  
  "integrations": {
    "_comment": "Mod Integration Configuration / 模组集成配置",
    "fabricPermissions": {
      "enabled": true
    }
  },
  
  "security": {
    "_comment": "Security Configuration / 安全配置",
    "ipWhitelist": {
      "enabled": false,
      "addresses": ["127.0.0.1", "192.168.1.0/24"]
    },
    "encryption": {
      "enabled": false,
      "algorithm": "AES-256-GCM",
      "keyFile": "encryption.key"
    }
  },
  
  "logging": {
    "_comment": "Logging Configuration / 日志配置",
    "level": "INFO",
    "debug": false,
    "logPerformance": true,
    "file": {
      "enabled": true,
      "path": "config/mochi-link-connector-fabric/logs/",
      "maxSize": "10MB",
      "maxFiles": 5
    }
  },
  
  "cache": {
    "_comment": "Cache Configuration / 缓存配置",
    "playerInfo": {
      "enabled": true,
      "maxSize": 1000,
      "ttl": 300
    },
    "permissions": {
      "enabled": true,
      "maxSize": 500,
      "ttl": 600
    }
  },
  
  "advanced": {
    "_comment": "Advanced Configuration / 高级配置",
    "threadPool": {
      "coreSize": 2,
      "maxSize": 10,
      "keepAliveTime": 60
    },
    "messageQueue": {
      "maxSize": 1000,
      "batchSize": 50,
      "flushInterval": 1000
    },
    "heartbeat": {
      "enabled": true,
      "interval": 30,
      "timeout": 10
    }
  },
  
  "development": {
    "_comment": "Development Configuration / 开发配置",
    "enabled": false,
    "simulateLatency": 0,
    "simulatePacketLoss": 0.0
  }
}